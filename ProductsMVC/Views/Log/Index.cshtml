@using ProductsMVC.Models
@model IEnumerable<LogViewModel>

@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="well well-sm"><h1>Product logs</h1></div>
<table class="table table-striped table-bordered table-hover table-responsive">
    <caption>Detailed info</caption>
    <tr>
        <th class="col-md-3">
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th class="col-md-3">
            @Html.DisplayNameFor(model => model.Timestamp)
        </th>
        <th class="col-md-3">
            @Html.DisplayNameFor(model => model.ActionDescription)
        </th class="col-md-3">
        <th>
            @Html.DisplayNameFor(model => model.Request)
        </th>
    </tr>
    @foreach (var item in Model.ToList())
    {
        @*@ShowProduct(item)*@
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Timestamp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActionDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Request)
        </td>
    </tr>
    }

</table>

